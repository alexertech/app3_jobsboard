<p id="notice"><%= notice %></p>
<h1>Profile</h1>
<p>
  <strong>Name:</strong>
  <%= @profile.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @profile.email %>
</p>

<p>
  <strong>Account Type:</strong>
  <%= case @profile.usertype
    when 1 
      'Hunter'
    when 2
      'Seeker'
    when 0
       'Admin'
    end  
  %>
</p>

<%=link_to 'Edit Profile', profile_edit_path%>